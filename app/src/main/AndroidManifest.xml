<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
    package="org.andresoviedo.dddmodel2"
    android:versionCode="27"
    android:versionName="3.0.3">

    <uses-sdk
        tools:overrideLibrary="android.support.compat, android.arch.lifecycle" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/ic_menu_sort_by_size"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:largeHeap="true"
        android:requestLegacyExternalStorage="true">
        <activity
            android:name="org.andresoviedo.app.model3D.MainAct"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.andresoviedo.util.view.TextActivity"
            android:label="@string/title_activity_text"
            android:parentActivityName="org.andresoviedo.app.model3D.MainAct" >
        </activity>
    </application>

</manifest>
